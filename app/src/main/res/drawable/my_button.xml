<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dp"
                android:color="#ef4046" />
            <gradient
                android:angle="-90"
                android:startColor="#0292fa"
                android:endColor="#ea43bb"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#ed3e4b" />
            <solid android:color="#ea45da"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#e94244" />
            <gradient android:angle="-90"
                android:startColor="#008ffc"
                android:endColor="#e746d4" />
        </shape>
    </item>
</selector>